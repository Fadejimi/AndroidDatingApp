<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/profileImageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profileImageView"
                android:layout_toEndOf="@+id/profileImageView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/company_name"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:id="@+id/title_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_textview"
                android:layout_toRightOf="@+id/profileImageView"
                android:layout_toEndOf="@+id/profileImageView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/posted"
                android:textSize="10sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_clock"
                    android:id="@+id/clock_view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h"
                    android:layout_toRightOf="@+id/clock_view"
                    android:layout_toEndOf="@+id/clock_view"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/profileImageView"
                android:layout_margin="10dp"
                android:id="@+id/image_view"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_heart"
                        android:id="@+id/love_image_view"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/love_image_view"
                        android:layout_toEndOf="@+id/love_image_view"
                        android:layout_margin="5dp"
                        android:text="2K"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:id="@+id/love_textview"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_message"
                        android:id="@+id/message_view"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/message_view"
                        android:layout_toEndOf="@+id/message_view"
                        android:layout_margin="5dp"
                        android:text="98"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:id="@+id/message_textview"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_share"
                        android:id="@+id/share_view"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/share_view"
                        android:layout_toEndOf="@+id/share_view"
                        android:layout_margin="5dp"
                        android:text="66"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:id="@+id/share_textview"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>